<h1>Home View</h1>
<div id="pet-cards-container">
    <!--here dynamically will be rendered pet profiles for each user-->
</div>
<head>
    <link rel="stylesheet" href="/public/css/home.css">
</head>
<body>

    <div id="pet-cards-container">
        {{#each pets}}
            {{> pet-card}}  
        {{/each}}
    </div>

    <main class="content">
        {{!-- User Sidebar --}}
        <aside class="sidebar user-panel">
            <img src="https://via.placeholder.com/100" alt="User profile" class="profile-pic">
            <h2>{{username}}</h2>
            <nav class="user-actions">
                <a href="#">edit profile</a>
                <a href="#">create post</a>
                <a href="#">view playdates</a>
            </nav>
        </aside>

        {{!-- Main Feed --}}
        <section class="feed">
            {{#each posts}}
                <article class="post">
                    <header class="post-header">
                        <img src="{{this.avatar}}" alt="User avatar" class="avatar">
                        <span class="username">@{{this.username}}</span>
                        <button class="schedule-btn">schedule playdate</button>
                    </header>
                    <img src="{{this.image}}" alt="Post image" class="post-image">
                    <p class="post-content">{{this.content}}</p>
                </article>
            {{/each}}
        </section>

        {{!-- Playdate Requests Sidebar --}}
        <aside class="sidebar playdate-panel">
            <h2>playdates:</h2>
            {{#each playdateRequests}}
                <div class="playdate-request">
                    <img src="{{this.avatar}}" alt="User avatar" class="avatar">
                    <span class="username">@{{this.username}}</span>
                    <div class="action-buttons">
                        <button class="accept-btn">accept</button>
                        <button class="decline-btn">decline</button>
                    </div>
                </div>
            {{/each}}
        </aside>
    </main>
   <script src="script.js"></script> </body>
</html>
