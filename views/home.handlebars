{{#if loggedIn}}
<h1>Home View</h1>
<div id="pet-profiles-container">
    <!--here dynamically will be rendered pet profiles for each user-->
</div>
        <section class="feed">
            <article class="post">
                <header class="post-header">
                    <img src="https://via.placeholder.com/50" alt="User avatar" class="avatar">
                    <span class="username">@corgi123</span>
                    <button class="schedule-btn">schedule playdate</button>
                </header>
                <img src="https://via.placeholder.com/400x300" alt="Post image" class="post-image">
                <p class="post-content">Welcome to Unleashed, a social media platform for pet lovers. 
                Share photos and stories of your pets and connect with fellow enthusiasts. 
                Join Unleashed to celebrate your furry friends!</p>
            </article>
            <!-- More posts would go here -->
        </section>
        <aside class="sidebar playdate-panel">
            <h2>playdates:</h2>
            <div class="playdate-request">
                <img src="https://via.placeholder.com/50" alt="User avatar" class="avatar">
                <span class="username">@user123</span>
                <div class="action-buttons">
                    <button class="accept-btn">accept</button>
                    <button class="decline-btn">decline</button>
                </div>
            </div>
            <!-- More playdate requests would go here -->
        </aside>
 
  {{else}}
  <p>Please <a href="/login">Log in</a> to your account to view the page</p>
   {{/if}}
    <script src="script.js"></script>

