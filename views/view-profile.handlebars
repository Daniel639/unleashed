<header class="bg-green-700 p-4 flex justify-between items-center">
  <button class="text-white text-3xl">â˜°</button>
  <h1 class="text-white text-2xl font-bold">unleashed</h1>
  <button class="bg-black text-white rounded-full p-2">&lt;/&gt;</button>
</header>

{{!-- main content area  --}}
<div class="bg-beige p-4 flex flex-col md:flex-row gap-4">

    {{!-- user sidebar --}}
  <div class="bg-green-700 rounded-lg p-4 text-white">
    <div class="w-24 h-24 bg-gray-300 rounded-full mx-auto mb-4"></div>
    <h2 class="text-center text-xl mb-2">{{username}}</h2>
    <ul class="space-y-2">
      <li><a href="#" class="underline">edit profile</a></li>
      <li><a href="#" class="underline">create post</a></li>
      <li><a href="#" class="underline">view playdates</a></li>
    </ul>
  </div>

{{!-- dog profile --}}
  <div class="bg-green-700 rounded-lg p-4 text-white flex-grow">
    <a href="#" class="text-white underline mb-4 block">Back to Feed</a>
    
    <div class="flex items-center mb-4">
      <img src="{{dogImageUrl}}" alt="{{dogName}}" class="w-24 h-24 rounded-full mr-4">
      <div>
        <p class="text-sm">@{{dogUsername}}</p>
        <h2 class="text-2xl font-bold">{{dogName}}</h2>
        <p>{{dogBreed}} &bull; {{dogAge}} &bull; {{dogGender}}</p>
      </div>
    </div>


    <p class="mb-4">{{dogDescription}}</p>

    <button class="bg-white text-green-700 py-2 px-4 rounded-full font-bold mb-4">
      Schedule a Playdate
    </button>

{{!-- playdate matching section --}}

    <div class="flex gap-4">
      {{#each playdates}}
        <div class="bg-white text-green-700 p-2 rounded-lg flex items-center">
          <div class="w-8 h-8 bg-gray-300 rounded-full mr-2"></div>
          <div>
            <p class="text-xs">@{{this.username}}</p>
            <a href="#" class="text-xs underline">schedule playdate</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>