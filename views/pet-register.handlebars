<div class="row mt-4">
  <div class="col-md-6">
    <h3>Please register your pet</h3>
    <form class="add-pet-form" action="/add-pet" method="POST">
      <div class="form-group">
        <label for="pet-name">Pet Name:</label>
        <input class="form-input" type="text" id="pet-name" name="name" value="{{pet.name}}" required />
      </div>
      <div class="form-group">
        <label for="pet-species">Species:</label>
        <input class="form-input" type="text" id="pet-species" name="species" value="{{pet.species}}" required />
      </div>
      <div class="form-group">
        <label for="pet-breed">Breed:</label>
        <input class="form-input" type="text" id="pet-breed" name="breed" value="{{pet.breed}}" />
      </div>
      <div class="form-group">
        <label for="pet-age">Age:</label>
        <input class="form-input" type="number" id="pet-age" name="age" value="{{pet.age}}" required />
      </div>
      <div class="form-group">
        <label for="pet-description">Description:</label>
        <textarea class="form-input" id="pet-description" name="description" rows="5" required>{{pet.description}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Register pet</button>
        
      </div>
    </form>
  </div>
</div>